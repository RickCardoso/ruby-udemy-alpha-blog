<%= form_with(model: @user, local: true) do |f| %>
  <div class="input__wrapper">
    <%= f.label :username, class: "label" %>
    <%= f.text_field :username, class: "input", placeholder: "Enter a username" %>
  </div>
  <div class="input__wrapper">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, class: "input", placeholder: "Enter a valid email" %>
  </div>
  <div class="input__wrapper">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, class: "input",  placeholder: (@user.new_record? ? "Create a new password" : "Change password") %>
  </div>

  <%= render "shared/errors", obj: @user %>

  <div class="form__actions">
    <%= link_to raw(
      render(IconComponent.new(symbol: 'arrow_back')) + "Back"
    ), root_path, class: "btn" %>
    <%= f.submit (@user.new_record? ? "Sign up" : "Save profile"), class: "btn btn-primary" %>
  </div>
<% end %>