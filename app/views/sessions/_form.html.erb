<%= form_with(scope: :session, url: login_path, local: true) do |f| %>
  <div class="input__wrapper">
    <%= f.label :username, class: "label" %>
    <%= f.text_field :username, class: "input", placeholder: "Enter your username" %>
  </div>
  <div class="input__wrapper">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, class: "input",  placeholder: "Enter your password" %>
  </div>

  <div class="form__actions">
    <%= link_to raw(
      render(IconComponent.new(symbol: 'arrow_back')) + "Back"
    ), root_path, class: "btn" %>
    <%= f.submit "Sign in", class: "btn btn-primary" %>
  </div>
<% end %>