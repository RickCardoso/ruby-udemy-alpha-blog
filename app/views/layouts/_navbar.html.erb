<script type="text/javascript">
  function toggleMenu() {
    var menu = document.getElementById('mobile-menu');
    var menuIcon = document.getElementById('mobile-menu-button');
    var menuBackdrop = document.getElementById('mobile-menu-backdrop');
    if (menu.classList.contains('translate-x-0')) {
      console.log('opened');
      menu.classList.remove('translate-x-0');
      menu.classList.add('translate-x-full');
      menuBackdrop.classList.remove('translate-x-0');
      menuBackdrop.classList.add('translate-x-full');
      menuIcon.firstElementChild.innerText = 'close';
    } else {
      console.log('closed');
      menu.classList.add('translate-x-0');
      menu.classList.remove('translate-x-full');
      menuBackdrop.classList.add('translate-x-0');
      menuBackdrop.classList.remove('translate-x-full');
      menuIcon.firstElementChild.innerText = 'menu';
    }
  }
</script>

<header class="sticky top-0 flex-none">
  <nav class="bg-zinc-900 h-12 sm:h-16">
    <!-- Mobile -->
    <div class="relative sm:hidden flex mx-auto justify-center items-center h-full px-4">
      <div class="absolute top-1/2 -translate-y-1/2 left-4 flex items-center">
        <button type="button" class="flex px-2 py-1 -m-2" id="mobile-menu-button" aria-controls="mobile-menu" aria-expanded="false" onclick="toggleMenu()">
          <%= render(IconComponent.new(symbol: 'menu')) %>
        </button>
      </div>
      <div class="flex items-center">
        <%= link_to 'AlphaBlog', root_path, class: "text-xl font-semibold text-white" %>
      </div>

      <!-- Mobile menu, show/hide based on menu state. -->
      <div class="sm:hidden fixed top-12 bottom-0 -left-64 w-64 bg-black z-10 translate-x-0 transition-transform" id="mobile-menu">
        <div class="sm:hidden fixed top-0 bottom-0 left-0 w-full bg-black bg-opacity-50 z-9 translate-x-0 transition-transform" id="mobile-menu-backdrop"></div>

        <div class="space-y-1 px-2 pt-2 pb-3">
          <%= link_to 'Articles', articles_path, class: "text-white block text-lg px-4 py-2 rounded-md hover:text-purple-400 hover:bg-white hover:bg-opacity-20" %>
          <%= link_to 'About' , about_path, class: "text-white block text-lg px-4 py-2 rounded-md hover:text-purple-400 hover:bg-white hover:bg-opacity-20" %>
        </div>
      </div>
    </div>
    
    <!-- Desktop -->
    <div class="hidden sm:flex max-w-screen-xl mx-auto justify-between items-center h-full px-6">
      <div class="flex items-center">
        <%= link_to 'AlphaBlog', root_path, class: "text-2xl font-bold text-white" %>
      </div>
      <div class="flex flex-none items-center gap-2">
        <%= link_to 'Articles', articles_path, class: "text-white block px-2 py-1 rounded-md hover:text-purple-400 hover:bg-white hover:bg-opacity-20" %>
        <%= link_to 'About' , about_path, class: "text-white block px-2 py-1 rounded-md hover:text-purple-400 hover:bg-white hover:bg-opacity-20" %>    </div>
    </div>
  </nav>
</header>