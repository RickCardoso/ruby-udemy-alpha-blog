<%= form_with(model: @category, local: true) do |f| %>
  <div class="input__wrapper">
    <%= f.label :name, class: "label" %>
    <%= f.text_field :name, class: "input", placeholder: "Enter a name" %>
  </div>

  <%= render "shared/errors", obj: @category %>

  <div class="form__actions">
    <%= link_to raw(
      render(IconComponent.new(symbol: 'arrow_back')) + "Back"
    ), (@category.new_record? ? root_path : @category), class: "btn" %>
    <%= f.submit (@category.new_record? ? "Create" : "Save category"), class: "btn btn-primary" %>
  </div>
<% end %>