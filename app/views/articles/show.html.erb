<div class="flex justify-between items-start">
  <div>
    <h2 class="heading"><%= @article.title %></h2>
    <p class="text-purple-400">by <%= "#{@article.user.username} [#{@article.user.email}]" if @article.user %></p>
  </div>

  <div class="flex gap-2">
    <%= link_to raw(
      render(IconComponent.new(symbol: 'edit')) + 'Edit'
    ), edit_article_path(@article), class: "btn" %>
    <%= link_to raw(
      render(IconComponent.new(symbol: 'delete')) + 'Delete'
    ), @article, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-danger" %>
  </div>
</div>

<p class="my-6"><%= @article.description %></p>

<div class="flex justify-between items-center">
    <%= link_to raw(
      render(IconComponent.new(symbol: 'arrow_back')) + "Back"
    ), articles_path, class: "btn" %>
  </div>