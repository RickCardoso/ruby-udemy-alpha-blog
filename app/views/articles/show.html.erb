<%= render "shared/page_header", heading: @article.title, actions: [
  {
    title: "Edit",
    path: edit_article_path(@article),
    icon: "edit",
    class: "btn",
  },
  {
    title: "Delete",
    path: @article,
    icon: "delete",
    class: "btn btn-danger",
    turbo_data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }
  }
] %>

<p class="text-sm text-purple-400 -mt-6">by <%= link_to "#{@article.user.username} [#{@article.user.email}]", @article.user %></p>

<p class="my-6"><%= @article.description %></p>

<div class="flex justify-between items-center">
    <%= link_to raw(
      render(IconComponent.new(symbol: 'arrow_back')) + "Back"
    ), articles_path, class: "btn" %>
  </div>